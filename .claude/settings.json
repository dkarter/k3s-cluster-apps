{
  "enableAllProjectMcpServers": true,
  "includeCoAuthoredBy": false,
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "task fmt"
          },
          {
            "type": "command",
            "command": "task hooks:post:edit:validate --exit-code"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "task hooks:notification:notify"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "task hooks:stop:notify"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(check-jsonschema:*)",
      "Bash(chmod:*)",
      "Bash(committed:*)",
      "Bash(curl:*)",
      "Bash(dig:*)",
      "Bash(dprint check:*)",
      "Bash(dprint fmt:*)",
      "Bash(echo)",
      "Bash(find:*)",
      "Bash(git add:*)",
      "Bash(grep:*)",
      "Bash(helm show:*)",
      "Bash(kubectl delete pod:*)",
      "Bash(kubectl describe:*)",
      "Bash(kubectl exec:*)",
      "Bash(kubectl get pods:*)",
      "Bash(kubectl get:*)",
      "Bash(kubectl logs:*)",
      "Bash(kubectl scale:*)",
      "Bash(kubectl wait:*)",
      "Bash(lefthook:*)",
      "Bash(ls:*)",
      "Bash(mise install:*)",
      "Bash(mise list:*)",
      "Bash(mise use:*)",
      "Bash(mkdir:*)",
      "Bash(npx ajv-cli validate:*)",
      "Bash(nslookup:*)",
      "Bash(rg:*)",
      "Bash(ssh:*)",
      "Bash(task:*)",
      "Bash(time task validate:elixir:*)",
      "Bash(timeout:*)",
      "Bash(yamllint:*)",
      "Bash(yq eval:*)",
      "WebFetch(domain:*)",
      "mcp__context7__get-library-docs",
      "mcp__context7__resolve-library-id"
    ],
    "deny": [
      "Bash(kubectl get secret:*)"
    ]
  }
}
