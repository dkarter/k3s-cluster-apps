{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.yml$/",
      "/\\.yaml$/"
    ]
  },
  "argocd": {
    "managerFilePatterns": [
      "/apps/.+\\.yml$/"
    ]
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "ghcr.io/hotio/**"
      ],
      "versionCompatibility": "^(?<compatibility>release-)(?<version>.+)$"
    }
  ]
}
