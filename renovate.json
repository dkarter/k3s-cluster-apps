{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.yml$/",
      "/\\.yaml$/"
    ]
  },
  "argocd": {
    "managerFilePatterns": [
      "/apps/.+\\.yml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.yml$/",
        "/\\.yaml$/"
      ],
      "matchStrings": [
        "image: (?<depName>ghcr.io/hotio/.*):release-(?<currentValue>.*)"
      ],
      "extractVersionTemplate": "^release-(?<version>.*)$",
      "datasourceTemplate": "docker"
    }
  ]
}
